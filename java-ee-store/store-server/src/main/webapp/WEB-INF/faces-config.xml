<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>
    
    <navigation-rule>
        <from-view-id>/WEB-INF/faces/admin-index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>product-list</from-outcome>
            <to-view-id>/WEB-INF/faces/admin-product-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>product-edit</from-outcome>
            <to-view-id>/WEB-INF/faces/admin-product-edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>order-list</from-outcome>
            <to-view-id>/WEB-INF/faces/admin-order-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>order-edit</from-outcome>
            <to-view-id>/WEB-INF/faces/admin-order-edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>category-list</from-outcome>
            <to-view-id>/WEB-INF/faces/admin-category-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>category-edit</from-outcome>
            <to-view-id>/WEB-INF/faces/admin-category-edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/WEB-INF/faces/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>